@page "/cartoes/details"

@using Microsoft.EntityFrameworkCore
@using IntegracaoCieloEcommerceSandbox.Models
@using IntegracaoCieloEcommerceSandbox.Data
@inject AppDbContext DbContext
@inject NavigationManager NavigationManager

<PageTitle>Cartão</PageTitle>

<h1>Detalhes do Cartão</h1>
<hr />

<div>
    @if (cartao is null)
    {
        NavigationManager.NavigateTo("notfound");
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Número Do Cartão</dt>
            <dd class="col-sm-10">@cartao.NumeroDoCartao</dd>
            <dt class="col-sm-2">CVV</dt>
            <dd class="col-sm-10">@cartao.Cvv</dd>
            <dt class="col-sm-2">Validade</dt>
            <dd class="col-sm-10">@cartao.Validade</dd>
            <dt class="col-sm-2">Nome No Cartão</dt>
            <dd class="col-sm-10">@cartao.NomeNoCartao</dd>
        </dl>
        <div>
            <a class="btn btn-warning btn-sm me-2" href="@($"cartoes/edit?id={cartao.Id}")"><i class="bi bi-pencil-square" style="color: black"></i> Editar</a>
            <a class="btn btn-danger btn-sm me-2" href="@($"cartoes/delete?id={cartao.Id}")"><i class="bi bi-trash3-fill"></i> Remover</a>
            <a class="btn btn-secondary btn-sm me-2" href="/cartoes"><i class="bi bi-arrow-left"></i> Voltar pra lista</a>
        </div>
    }
</div>

@code {
    Cartao? cartao;

    [SupplyParameterFromQuery]
    public int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        cartao = await DbContext.Cartoes.FirstOrDefaultAsync(m => m.Id == Id);

        if (cartao is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }
}
