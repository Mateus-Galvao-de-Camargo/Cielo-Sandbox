@page "/cartoes/delete"

@using Microsoft.EntityFrameworkCore
@using IntegracaoCieloEcommerceSandbox.Models
@using IntegracaoCieloEcommerceSandbox.Data
@inject AppDbContext DbContext
@inject NavigationManager NavigationManager


<PageTitle>Cartão</PageTitle>

<h1>Remover Cartão</h1>
<hr />

<div>
    @if (cartao is null)
    {
        NavigationManager.NavigateTo("notfound");
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Número Do Cartão</dt>
            <dd class="col-sm-10">@cartao.NumeroDoCartao</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">CVV</dt>
            <dd class="col-sm-10">@cartao.Cvv</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Validade</dt>
            <dd class="col-sm-10">@cartao.Validade</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Nome No Cartão</dt>
            <dd class="col-sm-10">@cartao.NomeNoCartao</dd>
        </dl>
        <EditForm method="post" Model="cartao" OnValidSubmit="DeleteCartao" FormName="delete" Enhance>
            <button id="submitButton" type="submit" class="btn btn-danger btn-sm me-2" disabled="@(cartao is null)"><i class="bi bi-trash3-fill"></i> Remover</button>
            <a class="btn btn-secondary btn-sm me-2" href="/cartoes"><i class="bi bi-arrow-left"></i> Voltar pra lista</a>
        </EditForm>
    }
</div>

@code {
    Cartao? cartao;

    [SupplyParameterFromQuery]
    public int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        cartao = await DbContext.Cartoes.FirstOrDefaultAsync(m => m.Id == Id);

        if (cartao is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private bool isProcessing;
    private bool navegar;
    private string? mensagemErro;

    public async Task DeleteCartao()
    {
        try
        {
            if (isProcessing)
            {
                return;
            }
            
            isProcessing = true;

            DbContext.Cartoes.Remove(cartao!);
            await DbContext.SaveChangesAsync();

            navegar = true;
        }
        catch (Exception ex)
        {
            mensagemErro = $"Erro ao remover o cartão: {ex.Message}";
        }
        finally
        {
            isProcessing = false;
            if (navegar)
            {
                NavigationManager.NavigateTo("/cartoes");
            }
        }
    }
}
