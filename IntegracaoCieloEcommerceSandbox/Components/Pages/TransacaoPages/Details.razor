@page "/transacoes/details"

@using Microsoft.EntityFrameworkCore
@using IntegracaoCieloEcommerceSandbox.Models
@using IntegracaoCieloEcommerceSandbox.Data
@inject AppDbContext DbContext
@inject NavigationManager NavigationManager

<PageTitle>Transação</PageTitle>

<h1>Detalhes da Transação</h1>
<hr />

<div>
    @if (transacao is null)
    {
        NavigationManager.NavigateTo("notfound");
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Valor</dt>
            <dd class="col-sm-10">@transacao.Valor.ToString("C", new System.Globalization.CultureInfo("pt-BR"))</dd>
            <dt class="col-sm-2">Id do Pagamento</dt>
            <dd class="col-sm-10">@transacao.PaymentId</dd>
            <dt class="col-sm-2">Estado Da Transação</dt>
            <dd class="col-sm-10">@transacao.EstadoDaTransacao</dd>
            <dt class="col-sm-2">Número do Cartão</dt>
            <dd class="col-sm-10">@transacao.Cartao.NumeroDoCartao</dd>
            <dt class="col-sm-2">Nome no Cartão</dt>
            <dd class="col-sm-10">@transacao.Cartao.NomeNoCartao</dd>
        </dl>
        <div>
            @if (transacao.EstadoDaTransacao == "Operation Successful")
            {
                <a class="btn btn-success btn-sm me-2" href="@($"/transacoes/edit?id={transacao.Id}")"><i class="bi bi-coin"></i> Capturar</a>
            }

            @if (transacao.EstadoDaTransacao == "Transação Capturada!" || transacao.EstadoDaTransacao == "Operation Successful")
            {
                <a class="btn btn-warning btn-sm me-2" href="@($"transacoes/delete?id={transacao.Id}")"><i class="bi bi-pause-circle-fill" style="color: black"></i> Cancelar</a>
            }

            <a class="btn btn-danger btn-sm me-2" href="@($"/transacoes/remove?id={transacao.Id}")"><i class="bi bi-trash3-fill"></i> Remover</a>
            <a class="btn btn-secondary btn-sm me-2" href="/transacoes"><i class="bi bi-arrow-left"></i>Voltar pra lista</a>
        </div>
    }
</div>

@code {
    Transacao? transacao;

    [SupplyParameterFromQuery]
    public int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        transacao = await DbContext.Transacoes.Include(t => t.Cartao).FirstOrDefaultAsync(m => m.Id == Id);

        if (transacao is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }
}
